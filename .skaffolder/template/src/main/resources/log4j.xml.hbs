<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="fileLogger" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${logfile.path}/{{project.name}}.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="Append" value="true" />
<!-- 
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="20" />
 -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%X{user}] %m%n" />
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%X{user}] %m%n" />
		</layout>
	</appender>

	<logger name="com.{{lowercase project.name}}" additivity="true">
		<level value="INFO" />
	</logger>

	<logger name="org.springframework.data" additivity="true">
		<level value="INFO" />
	</logger>
	
	<root>
		<priority value ="INFO" />
  		<appender-ref ref="console" />
	</root>

</log4j:configuration>